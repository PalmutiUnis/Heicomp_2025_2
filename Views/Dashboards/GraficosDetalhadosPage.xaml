<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Heicomp_2025_2.Views.Dashboards.GraficosDetalhadosPage"
             Title=""
             BackgroundColor="{AppThemeBinding Light=#F3F4F6, Dark=#0F172A}"
             Shell.FlyoutBehavior="Disabled">

    <!-- Layout do Shell NavBar -->
    <Shell.TitleView>
        <Grid BackgroundColor="{AppThemeBinding Light=#2B4C9E, Dark=#1E293B}" 
              ColumnDefinitions="Auto, *, Auto"
              HorizontalOptions="Fill"
              VerticalOptions="Fill"
              Padding="10,0"
              HeightRequest="60">

            <!-- Botão Voltar -->
            <ImageButton Grid.Column="0"
                         Source="seta_direita.png"  
                         HeightRequest="44"
                         WidthRequest="44"
                         BackgroundColor="Transparent"
                         Clicked="BotaoVoltarPainelGestao"
                         HorizontalOptions="Start"
                         VerticalOptions="Center"/>

            <!-- Título -->
            <Label Grid.Column="1"
                   Text="Gráficos Detalhados"
                   FontFamily="OpenSansSemibold"
                   FontSize="20"
                   TextColor="White"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"/>

            <!-- Menu -->
            <ImageButton Grid.Column="2"
                         Source="icone_menu.png"  
                         HeightRequest="44"
                         WidthRequest="44"
                         BackgroundColor="Transparent"
                         HorizontalOptions="End"
                         VerticalOptions="Center"/>
        </Grid>
    </Shell.TitleView>

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="20">

            <!-- FILTROS -->
            <VerticalStackLayout Spacing="12">

                <!-- Filtro: Todas as Unidades -->
                <Border BackgroundColor="{AppThemeBinding Light=White, Dark=#1E293B}"
                        Padding="15"
                        StrokeThickness="1"
                        Stroke="{AppThemeBinding Light=#E5E7EB, Dark=#334155}">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8"/>
                    </Border.StrokeShape>

                    <Grid ColumnDefinitions="*,Auto">
                        <Label Grid.Column="0"
                               Text="Todas as Unidades"
                               FontFamily="OpenSansRegular"
                               FontSize="14"
                               TextColor="{AppThemeBinding Light=#374151, Dark=#E5E7EB}"
                               VerticalOptions="Center"/>
                        <Label Grid.Column="1"
                               Text="▼"
                               FontSize="12"
                               TextColor="{AppThemeBinding Light=#9CA3AF, Dark=#6B7280}"
                               VerticalOptions="Center"/>
                    </Grid>
                </Border>

                <!-- Filtros: Último Mês e Todos -->
                <Grid ColumnDefinitions="*,*" ColumnSpacing="12">

                    <!-- Último Mês -->
                    <Border Grid.Column="0"
                            BackgroundColor="{AppThemeBinding Light=White, Dark=#1E293B}"
                            Padding="15"
                            StrokeThickness="1"
                            Stroke="{AppThemeBinding Light=#E5E7EB, Dark=#334155}">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>

                        <Grid ColumnDefinitions="*,Auto">
                            <Label Grid.Column="0"
                                   Text="Último Mês"
                                   FontFamily="OpenSansRegular"
                                   FontSize="14"
                                   TextColor="{AppThemeBinding Light=#374151, Dark=#E5E7EB}"
                                   VerticalOptions="Center"/>
                            <Label Grid.Column="1"
                                   Text="▼"
                                   FontSize="12"
                                   TextColor="{AppThemeBinding Light=#9CA3AF, Dark=#6B7280}"
                                   VerticalOptions="Center"/>
                        </Grid>
                    </Border>

                    <!-- Todos -->
                    <Border Grid.Column="1"
                            BackgroundColor="{AppThemeBinding Light=White, Dark=#1E293B}"
                            Padding="15"
                            StrokeThickness="1"
                            Stroke="{AppThemeBinding Light=#E5E7EB, Dark=#334155}">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>

                        <Grid ColumnDefinitions="*,Auto">
                            <Label Grid.Column="0"
                                   Text="Todos"
                                   FontFamily="OpenSansRegular"
                                   FontSize="14"
                                   TextColor="{AppThemeBinding Light=#374151, Dark=#E5E7EB}"
                                   VerticalOptions="Center"/>
                            <Label Grid.Column="1"
                                   Text="▼"
                                   FontSize="12"
                                   TextColor="{AppThemeBinding Light=#9CA3AF, Dark=#6B7280}"
                                   VerticalOptions="Center"/>
                        </Grid>
                    </Border>
                </Grid>
            </VerticalStackLayout>

            <!-- GRÁFICO: ALUNOS POR UNIDADE -->
            <Border BackgroundColor="{AppThemeBinding Light=White, Dark=#1E293B}"
                    Padding="20"
                    StrokeThickness="1"
                    Stroke="{AppThemeBinding Light=#E5E7EB, Dark=#334155}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12"/>
                </Border.StrokeShape>

                <VerticalStackLayout Spacing="20">
                    <!-- Título -->
                    <Label Text="Alunos por Unidade"
                           FontFamily="OpenSansSemibold"
                           FontSize="16"
                           TextColor="{AppThemeBinding Light=#1F2937, Dark=#F9FAFB}"/>

                    <!-- Gráfico de Barras Simulado -->
                    <Grid RowDefinitions="Auto,200,Auto" RowSpacing="10">

                        <!-- Valores do Eixo Y -->
                        <VerticalStackLayout Grid.Row="1" 
                                           Spacing="28" 
                                           HorizontalOptions="Start"
                                           VerticalOptions="Fill">
                            <Label Text="1500" 
                                   FontFamily="OpenSansRegular" 
                                   FontSize="11" 
                                   TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"/>
                            <Label Text="1000" 
                                   FontFamily="OpenSansRegular" 
                                   FontSize="11" 
                                   TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"/>
                            <Label Text="500" 
                                   FontFamily="OpenSansRegular" 
                                   FontSize="11" 
                                   TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"/>
                            <Label Text="0" 
                                   FontFamily="OpenSansRegular" 
                                   FontSize="11" 
                                   TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"/>
                        </VerticalStackLayout>

                        <!-- Barras -->
                        <Grid Grid.Row="1" 
                              Margin="40,0,0,0"
                              ColumnDefinitions="*,*,*,*" 
                              ColumnSpacing="10"
                              VerticalOptions="End">

                            <!-- Barra 1: Varginha -->
                            <VerticalStackLayout Grid.Column="0" Spacing="5">
                                <BoxView BackgroundColor="#3B82F6"
                                        HeightRequest="150"
                                        CornerRadius="4"
                                        VerticalOptions="End"/>
                            </VerticalStackLayout>

                            <!-- Barra 2: Três Pontas -->
                            <VerticalStackLayout Grid.Column="1" Spacing="5">
                                <BoxView BackgroundColor="#3B82F6"
                                        HeightRequest="130"
                                        CornerRadius="4"
                                        VerticalOptions="End"/>
                            </VerticalStackLayout>

                            <!-- Barra 3: Pouso Alegre -->
                            <VerticalStackLayout Grid.Column="2" Spacing="5">
                                <BoxView BackgroundColor="#3B82F6"
                                        HeightRequest="145"
                                        CornerRadius="4"
                                        VerticalOptions="End"/>
                            </VerticalStackLayout>

                            <!-- Barra 4: São Lourenço -->
                            <VerticalStackLayout Grid.Column="3" Spacing="5">
                                <BoxView BackgroundColor="#3B82F6"
                                        HeightRequest="110"
                                        CornerRadius="4"
                                        VerticalOptions="End"/>
                            </VerticalStackLayout>
                        </Grid>

                        <!-- Labels das Unidades -->
                        <Grid Grid.Row="2" 
                              Margin="40,0,0,0"
                              ColumnDefinitions="*,*,*,*" 
                              ColumnSpacing="10">
                            <Label Grid.Column="0"
                                   Text="Varginha"
                                   FontFamily="OpenSansRegular"
                                   FontSize="11"
                                   TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"
                                   HorizontalOptions="Center"/>
                            <Label Grid.Column="1"
                                   Text="Três Pontas"
                                   FontFamily="OpenSansRegular"
                                   FontSize="11"
                                   TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"
                                   HorizontalOptions="Center"/>
                            <Label Grid.Column="2"
                                   Text="Pouso Alegre"
                                   FontFamily="OpenSansRegular"
                                   FontSize="11"
                                   TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"
                                   HorizontalOptions="Center"/>
                            <Label Grid.Column="3"
                                   Text="São Lourenço"
                                   FontFamily="OpenSansRegular"
                                   FontSize="11"
                                   TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"
                                   HorizontalOptions="Center"/>
                        </Grid>
                    </Grid>
                </VerticalStackLayout>
            </Border>

            <!-- GRÁFICO: COLABORADORES POR UNIDADE (FOCO DO GRUPO) -->
            <Border BackgroundColor="{AppThemeBinding Light=White, Dark=#1E293B}"
                    Padding="20"
                    StrokeThickness="1"
                    Stroke="{AppThemeBinding Light=#E5E7EB, Dark=#334155}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12"/>
                </Border.StrokeShape>

                <VerticalStackLayout Spacing="20">
                    <!-- Título e Legenda -->
                    <Grid RowDefinitions="Auto,Auto" RowSpacing="15">
                        <Label Grid.Row="0"
                               Text="Colaboradores por Unidade"
                               FontFamily="OpenSansSemibold"
                               FontSize="16"
                               TextColor="{AppThemeBinding Light=#1F2937, Dark=#F9FAFB}"/>

                        <!-- Legenda -->
                        <HorizontalStackLayout Grid.Row="1" 
                                             Spacing="20"
                                             HorizontalOptions="Center">
                            <HorizontalStackLayout Spacing="8">
                                <BoxView BackgroundColor="#1E3A8A"
                                        WidthRequest="16"
                                        HeightRequest="16"
                                        CornerRadius="3"
                                        VerticalOptions="Center"/>
                                <Label Text="Homens"
                                       FontFamily="OpenSansRegular"
                                       FontSize="13"
                                       TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"
                                       VerticalOptions="Center"/>
                            </HorizontalStackLayout>

                            <HorizontalStackLayout Spacing="8">
                                <BoxView BackgroundColor="#60A5FA"
                                        WidthRequest="16"
                                        HeightRequest="16"
                                        CornerRadius="3"
                                        VerticalOptions="Center"/>
                                <Label Text="Mulheres"
                                       FontFamily="OpenSansRegular"
                                       FontSize="13"
                                       TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"
                                       VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                        </HorizontalStackLayout>
                    </Grid>

                    <!-- Gráfico de Barras Empilhadas -->
                    <Grid RowDefinitions="Auto,180,Auto" RowSpacing="10">

                        <!-- Valores do Eixo Y -->
                        <VerticalStackLayout Grid.Row="1" 
                                           Spacing="35" 
                                           HorizontalOptions="Start"
                                           VerticalOptions="Fill">
                            <Label Text="150" 
                                   FontFamily="OpenSansRegular" 
                                   FontSize="11" 
                                   TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"/>
                            <Label Text="100" 
                                   FontFamily="OpenSansRegular" 
                                   FontSize="11" 
                                   TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"/>
                            <Label Text="50" 
                                   FontFamily="OpenSansRegular" 
                                   FontSize="11" 
                                   TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"/>
                            <Label Text="0" 
                                   FontFamily="OpenSansRegular" 
                                   FontSize="11" 
                                   TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"/>
                        </VerticalStackLayout>

                        <!-- Barras Empilhadas -->
                        <Grid Grid.Row="1" 
                              Margin="40,0,0,0"
                              ColumnDefinitions="*,*,*,*" 
                              ColumnSpacing="15"
                              VerticalOptions="End">

                            <!-- Unidade 1: Varginha -->
                            <VerticalStackLayout Grid.Column="0" Spacing="0">
                                <!-- Homens (Azul escuro) -->
                                <BoxView BackgroundColor="#1E3A8A"
                                        HeightRequest="70"
                                        CornerRadius="4,4,0,0"
                                        VerticalOptions="End"/>
                                <!-- Mulheres (Azul claro) -->
                                <BoxView BackgroundColor="#60A5FA"
                                        HeightRequest="50"
                                        CornerRadius="0,0,4,4"
                                        VerticalOptions="End"/>
                            </VerticalStackLayout>

                            <!-- Unidade 2: Três Pontas -->
                            <VerticalStackLayout Grid.Column="1" Spacing="0">
                                <!-- Homens -->
                                <BoxView BackgroundColor="#1E3A8A"
                                        HeightRequest="60"
                                        CornerRadius="4,4,0,0"
                                        VerticalOptions="End"/>
                                <!-- Mulheres -->
                                <BoxView BackgroundColor="#60A5FA"
                                        HeightRequest="45"
                                        CornerRadius="0,0,4,4"
                                        VerticalOptions="End"/>
                            </VerticalStackLayout>

                            <!-- Unidade 3: Pouso Alegre -->
                            <VerticalStackLayout Grid.Column="2" Spacing="0">
                                <!-- Homens -->
                                <BoxView BackgroundColor="#1E3A8A"
                                        HeightRequest="65"
                                        CornerRadius="4,4,0,0"
                                        VerticalOptions="End"/>
                                <!-- Mulheres -->
                                <BoxView BackgroundColor="#60A5FA"
                                        HeightRequest="48"
                                        CornerRadius="0,0,4,4"
                                        VerticalOptions="End"/>
                            </VerticalStackLayout>

                            <!-- Unidade 4: São Lourenço -->
                            <VerticalStackLayout Grid.Column="3" Spacing="0">
                                <!-- Homens -->
                                <BoxView BackgroundColor="#1E3A8A"
                                        HeightRequest="55"
                                        CornerRadius="4,4,0,0"
                                        VerticalOptions="End"/>
                                <!-- Mulheres -->
                                <BoxView BackgroundColor="#60A5FA"
                                        HeightRequest="40"
                                        CornerRadius="0,0,4,4"
                                        VerticalOptions="End"/>
                            </VerticalStackLayout>
                        </Grid>

                        <!-- Labels das Unidades -->
                        <Grid Grid.Row="2" 
                              Margin="40,0,0,0"
                              ColumnDefinitions="*,*,*,*" 
                              ColumnSpacing="15">
                            <Label Grid.Column="0"
                                   Text="Varginha"
                                   FontFamily="OpenSansRegular"
                                   FontSize="11"
                                   TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"
                                   HorizontalOptions="Center"/>
                            <Label Grid.Column="1"
                                   Text="Três Pontas"
                                   FontFamily="OpenSansRegular"
                                   FontSize="11"
                                   TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"
                                   HorizontalOptions="Center"/>
                            <Label Grid.Column="2"
                                   Text="Pouso Alegre"
                                   FontFamily="OpenSansRegular"
                                   FontSize="11"
                                   TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"
                                   HorizontalOptions="Center"/>
                            <Label Grid.Column="3"
                                   Text="São Lourenço"
                                   FontFamily="OpenSansRegular"
                                   FontSize="11"
                                   TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"
                                   HorizontalOptions="Center"/>
                        </Grid>
                    </Grid>
                </VerticalStackLayout>
            </Border>

            <!-- GRÁFICO: ROTATIVIDADE POR SETOR -->
            <Border BackgroundColor="{AppThemeBinding Light=White, Dark=#1E293B}"
                    Padding="20"
                    StrokeThickness="1"
                    Stroke="{AppThemeBinding Light=#E5E7EB, Dark=#334155}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12"/>
                </Border.StrokeShape>

                <VerticalStackLayout Spacing="20">
                    <!-- Título -->
                    <Label Text="Rotatividade por Setor"
                           FontFamily="OpenSansSemibold"
                           FontSize="16"
                           TextColor="{AppThemeBinding Light=#1F2937, Dark=#F9FAFB}"/>

                    <!-- Gráfico de Linha Simulado -->
                    <Grid RowDefinitions="Auto,150,Auto" RowSpacing="10">

                        <!-- Valores do Eixo Y -->
                        <VerticalStackLayout Grid.Row="1" 
                                           Spacing="28" 
                                           HorizontalOptions="Start"
                                           VerticalOptions="Fill">
                            <Label Text="20" 
                                   FontFamily="OpenSansRegular" 
                                   FontSize="11" 
                                   TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"/>
                            <Label Text="15" 
                                   FontFamily="OpenSansRegular" 
                                   FontSize="11" 
                                   TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"/>
                            <Label Text="10" 
                                   FontFamily="OpenSansRegular" 
                                   FontSize="11" 
                                   TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"/>
                            <Label Text="5" 
                                   FontFamily="OpenSansRegular" 
                                   FontSize="11" 
                                   TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"/>
                        </VerticalStackLayout>

                        <!-- Pontos da Linha (Simulação Visual) -->
                        <Grid Grid.Row="1" 
                              Margin="40,0,0,0"
                              ColumnDefinitions="*,*,*,*" 
                              ColumnSpacing="10"
                              VerticalOptions="Fill">

                            <Ellipse Grid.Column="0"
                                    Fill="#F59E0B"
                                    WidthRequest="12"
                                    HeightRequest="12"
                                    VerticalOptions="Start"
                                    HorizontalOptions="Center"
                                    Margin="0,45,0,0"/>

                            <Ellipse Grid.Column="1"
                                    Fill="#F59E0B"
                                    WidthRequest="12"
                                    HeightRequest="12"
                                    VerticalOptions="Start"
                                    HorizontalOptions="Center"
                                    Margin="0,70,0,0"/>

                            <Ellipse Grid.Column="2"
                                    Fill="#F59E0B"
                                    WidthRequest="12"
                                    HeightRequest="12"
                                    VerticalOptions="Start"
                                    HorizontalOptions="Center"
                                    Margin="0,25,0,0"/>

                            <Ellipse Grid.Column="3"
                                    Fill="#F59E0B"
                                    WidthRequest="12"
                                    HeightRequest="12"
                                    VerticalOptions="Start"
                                    HorizontalOptions="Center"
                                    Margin="0,90,0,0"/>
                        </Grid>

                        <!-- Labels dos Setores -->
                        <Grid Grid.Row="2" 
                              Margin="40,0,0,0"
                              ColumnDefinitions="*,*,*,*" 
                              ColumnSpacing="10">
                            <Label Grid.Column="0"
                                   Text="Administrativo"
                                   FontFamily="OpenSansRegular"
                                   FontSize="10"
                                   TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"
                                   HorizontalOptions="Center"/>
                            <Label Grid.Column="1"
                                   Text="Professores"
                                   FontFamily="OpenSansRegular"
                                   FontSize="10"
                                   TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"
                                   HorizontalOptions="Center"/>
                            <Label Grid.Column="2"
                                   Text="Limpeza"
                                   FontFamily="OpenSansRegular"
                                   FontSize="10"
                                   TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"
                                   HorizontalOptions="Center"/>
                            <Label Grid.Column="3"
                                   Text="Segurança"
                                   FontFamily="OpenSansRegular"
                                   FontSize="10"
                                   TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"
                                   HorizontalOptions="Center"/>
                        </Grid>
                    </Grid>
                </VerticalStackLayout>
            </Border>

            <!-- BOTÕES DE EXPORTAÇÃO -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="12" Margin="0,10,0,20">

                <!-- Botão Exportar CSV -->
                <Border Grid.Column="0"
                        BackgroundColor="{AppThemeBinding Light=White, Dark=#1E293B}"
                        Padding="15"
                        StrokeThickness="1"
                        Stroke="{AppThemeBinding Light=#E5E7EB, Dark=#334155}">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8"/>
                    </Border.StrokeShape>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnExportarCsvClicked"/>
                    </Border.GestureRecognizers>

                    <HorizontalStackLayout Spacing="8" HorizontalOptions="Center">
                        <Label Text="⬇️"
                               FontSize="16"
                               VerticalOptions="Center"/>
                        <Label Text="Exportar CSV"
                               FontFamily="OpenSansSemibold"
                               FontSize="14"
                               TextColor="{AppThemeBinding Light=#374151, Dark=#E5E7EB}"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                </Border>

                <!-- Botão Gerar PDF -->
                <Border Grid.Column="1"
                        BackgroundColor="{AppThemeBinding Light=#1E3A8A, Dark=#3B82F6}"
                        Padding="15"
                        StrokeThickness="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8"/>
                    </Border.StrokeShape>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnGerarPdfClicked"/>
                    </Border.GestureRecognizers>

                    <HorizontalStackLayout Spacing="8" HorizontalOptions="Center">
                        <Label Text="📄"
                               FontSize="16"
                               VerticalOptions="Center"/>
                        <Label Text="Gerar PDF"
                               FontFamily="OpenSansSemibold"
                               FontSize="14"
                               TextColor="White"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                </Border>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>