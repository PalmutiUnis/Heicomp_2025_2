<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:Heicomp_2025_2.Converters"
    x:Class="Heicomp_2025_2.Views.Dashboards.ColaboradoresPage"
    Title="Colaboradores"
    BackgroundColor="#F3F4F6">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:PercentToProgressConverter x:Key="PercentToProgressConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- FILTROS -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="12">

                <!-- FILTRO 1 -->
                <Frame Grid.Column="0"
           BackgroundColor="white"
           CornerRadius="12"
           HasShadow="False"
           Padding="0"
           HeightRequest="45">

                    <!-- AQUI A MÁGICA: Picker cobre tudo -->
                    <Grid ColumnDefinitions="*,Auto" Padding="10,0">

                        <!-- Picker ocupa toda a área -->
                        <Picker
                            ItemsSource="{Binding Unidades}"
                            SelectedItem="{Binding UnidadeSelecionada}"
                            Title="Todas as Unidades"
                            FontFamily="InterRegular"
                            BackgroundColor="Transparent"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="FillAndExpand" />

                        <!-- Imagem apenas visual (não bloqueia toque) -->
                        <Image Source="seta.png"
                            HeightRequest="18"
                            WidthRequest="18"
                            VerticalOptions="Center"
                            Grid.Column="1"
                            InputTransparent="True"/>
                        <!-- ESSA PROPRIEDADE É A CHAVE -->
                    </Grid>
                </Frame>


                <!-- FILTRO 2 -->
                <Frame Grid.Column="1"
           BackgroundColor="white"
           CornerRadius="12"
           HasShadow="False"
           Padding="0"
           HeightRequest="45">

                    <Grid ColumnDefinitions="*,Auto" Padding="10,0">

                        <Picker
                            ItemsSource="{Binding Anos}"
                            SelectedItem="{Binding AnoSelecionado}"
                            Title="Selecione o ano"
                            FontFamily="InterRegular"
                            BackgroundColor="Transparent"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="FillAndExpand" />

                        <Image Source="seta.png"
                   HeightRequest="18"
                   WidthRequest="18"
                   VerticalOptions="Center"
                   Grid.Column="1"
                   InputTransparent="True"/>
                    </Grid>
                </Frame>

            </Grid>


            <!-- CARD TOTAL DE COLABORADORES -->
            <Frame BackgroundColor="White" CornerRadius="15" HasShadow="True" Padding="15">
                <Grid ColumnDefinitions="*,Auto" VerticalOptions="Center">
                    <VerticalStackLayout>
                        <Label Text="Total de Colaboradores"
                               FontFamily="InterSemiBold"
                               FontSize="16"
                               TextColor="Black"/>
                        <Label Text="{Binding TotalColaboradores}"
                               FontFamily="InterBold"
                               FontSize="28"
                               TextColor="#1E3A8A"/>

                    </VerticalStackLayout>
                    <!-- ALTERE AQUI: ícone de pessoas -->
                    <ImageButton Source="tot_colaboradores.png"
                                 HeightRequest="40"
                                 WidthRequest="40"
                                 Grid.Column="1"
                                 VerticalOptions="Center"
                                 
                                 IsEnabled="False"
                                 />
                    <!--TintColor="#60A5FA"-->
                </Grid>
            </Frame>

            <!-- CARD DISTRIBUIÇÃO POR GÊNERO -->
            <Frame BackgroundColor="White" CornerRadius="15" HasShadow="True" Padding="15">
                <VerticalStackLayout Spacing="12">

                    <Label Text="Distribuição por Gênero"
                           FontFamily="InterSemiBold"
                           FontSize="16"
                           TextColor="Black"/>

                    <!-- HOMENS -->
                    <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto" RowSpacing="6">
                        <HorizontalStackLayout Grid.Row="0" Grid.Column="0" Spacing="6">
                            <Image Source="homem.png" HeightRequest="11" WidthRequest="11"/>
                            <Label Text="Homens" FontFamily="InterRegular"/>
                        </HorizontalStackLayout>

                        <Label Text="{Binding GeneroHomensDisplay}"
                               Grid.Row="0"
                               Grid.Column="2"
                               HorizontalOptions="End"
                               FontFamily="InterBold"/>

                        <ProgressBar Progress="{Binding DistribuicaoGenero[0].Percentual, Converter={StaticResource PercentToProgressConverter}}"
             HeightRequest="8" Grid.Row="1" Grid.ColumnSpan="3" HorizontalOptions="FillAndExpand" ProgressColor="#1E3A8A"/>

                    </Grid>

                    <!-- MULHERES -->
                    <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto" RowSpacing="6">
                        <HorizontalStackLayout Grid.Row="0" Grid.Column="0" Spacing="6">
                            <Image Source="mulher.png" HeightRequest="11" WidthRequest="11"/>
                            <Label Text="Mulheres" FontFamily="InterRegular"/>
                        </HorizontalStackLayout>

                        <Label Text="{Binding GeneroMulheresDisplay}"
                               Grid.Row="0"
                               Grid.Column="2"
                               HorizontalOptions="End"
                               FontFamily="InterBold"/>

                        <ProgressBar Progress="{Binding DistribuicaoGenero[1].Percentual, Converter={StaticResource PercentToProgressConverter}}"
             HeightRequest="8" Grid.Row="1" Grid.ColumnSpan="3" HorizontalOptions="FillAndExpand" ProgressColor="#60A5FA"/>

                    </Grid>


                </VerticalStackLayout>
            </Frame>


            <!-- CARD STATUS DOS COLABORADORES -->
            <Frame BackgroundColor="White" CornerRadius="15" HasShadow="True" Padding="15">
                <VerticalStackLayout Spacing="10">

                    <Label Text="Status dos Colaboradores"
               FontFamily="InterSemiBold"
               FontSize="16"
               TextColor="Black"/>

                    <Grid ColumnSpacing="20" RowSpacing="25"
              ColumnDefinitions="*,*"
              RowDefinitions="Auto,Auto">

                        <!-- ATIVOS -->
                        <VerticalStackLayout Grid.Row="0" Grid.Column="0" Spacing="5"
                                 HorizontalOptions="Center">

                            <!-- Ícone -->
                            <Frame Padding="10" CornerRadius="10" HasShadow="False">
                                <Image Source="ativos.png"
                           HeightRequest="50"
                           WidthRequest="50" />
                            </Frame>

                            <!-- Valor -->
                            <Label Text="{Binding Status.Ativos}"
                                   FontFamily="InterBold"
                                   FontSize="18"
                                   HorizontalOptions="Center"
                                   TextColor="Black"/>

                            <!-- Descrição -->
                            <Label Text="Ativos" FontFamily="InterRegular" FontSize="13"
                       HorizontalOptions="Center" TextColor="#555"/>
                        </VerticalStackLayout>


                        <!-- EM LICENÇA -->
                        <VerticalStackLayout Grid.Row="0" Grid.Column="1" Spacing="5"
                                 HorizontalOptions="Center">

                            <Frame Padding="10" CornerRadius="10" HasShadow="False">
                                <Image Source="licenca.png"
                           HeightRequest="50"
                           WidthRequest="50" />
                            </Frame>

                            <Label Text="{Binding Status.EmLicenca}"
                                   FontFamily="InterBold"
                                   FontSize="18"
                                   HorizontalOptions="Center"
                                   TextColor="Black"/>

                            <Label Text="Em Licença" FontFamily="InterRegular" FontSize="13"
                       HorizontalOptions="Center" TextColor="#555"/>
                        </VerticalStackLayout>


                        <!-- ESTAGIÁRIOS -->
                        <VerticalStackLayout Grid.Row="1" Grid.Column="0" Spacing="5"
                                 HorizontalOptions="Center">

                            <Frame Padding="10" CornerRadius="10" HasShadow="False">
                                <Image Source="estagiarios.png"
                           HeightRequest="50"
                           WidthRequest="50" />
                            </Frame>

                            <Label Text="{Binding Status.Estagiarios}"
                                   FontFamily="InterBold"
                                   FontSize="18"
                                   HorizontalOptions="Center"
                                   TextColor="Black"/>


                            <Label Text="Estagiários" FontFamily="InterRegular" FontSize="13"
                       HorizontalOptions="Center" TextColor="#555"/>
                        </VerticalStackLayout>


                        <!-- PCD -->
                        <VerticalStackLayout Grid.Row="1" Grid.Column="1" Spacing="5"
                                 HorizontalOptions="Center">

                            <Frame Padding="10" CornerRadius="10" HasShadow="False">
                                <Image Source="pcd.png"
                           HeightRequest="50"
                           WidthRequest="50" />
                            </Frame>

                            <Label Text="{Binding Status.Pcd}"
                                   FontFamily="InterBold"
                                   FontSize="18"
                                   HorizontalOptions="Center"
                                   TextColor="Black"/>


                            <Label Text="PCD" FontFamily="InterRegular" FontSize="13"
                       HorizontalOptions="Center" TextColor="#555"/>
                        </VerticalStackLayout>

                    </Grid>

                </VerticalStackLayout>
            </Frame>


            <!-- CARD COLABORADORES POR SETOR -->
            <Frame BackgroundColor="White" CornerRadius="15" HasShadow="True" Padding="15" Margin="0,10,0,0">
                <Grid>
                    <VerticalStackLayout Spacing="10">

                        <!-- TÍTULO -->
                        <Label Text="Colaboradores por Setor"
                   FontFamily="InterSemiBold"
                   FontSize="16"
                   TextColor="Black"/>

                        <!-- GRADE ESCALA + GRÁFICO -->
                        <Grid ColumnDefinitions="40, *"
                  RowDefinitions="*,*,*,*,*,Auto"
                  HeightRequest="260">

                            <!-- ESCALA -->
                            <Label Grid.Row="0" Grid.Column="0" Text="400" FontSize="12" VerticalOptions="End" />
                            <Label Grid.Row="1" Grid.Column="0" Text="300" FontSize="12" VerticalOptions="End" />
                            <Label Grid.Row="2" Grid.Column="0" Text="200" FontSize="12" VerticalOptions="End" />
                            <Label Grid.Row="3" Grid.Column="0" Text="100" FontSize="12" VerticalOptions="End" />
                            <Label Grid.Row="4" Grid.Column="0" Text="0" FontSize="12" VerticalOptions="End" />

                            <!-- ÁREA DAS BARRAS -->
                            <Grid Grid.Column="1" Grid.RowSpan="5"
                      ColumnDefinitions="*,*,*,*,*"
                      VerticalOptions="FillAndExpand"
                      Padding="6,0">

                                <!-- BARRA 1 -->
                                <StackLayout Grid.Column="0" VerticalOptions="End" HorizontalOptions="Center">
                                    <Label Text="{Binding Setores[0].Quantidade}"
                               FontSize="12"
                               FontFamily="InterSemiBold"
                               TextColor="#1E3A8A"
                               IsVisible="{Binding MostrarValor1}" 
                               HorizontalOptions="Center"/>
                                    <BoxView x:Name="Barra1"
                                 WidthRequest="27"
                                 HeightRequest="{Binding Setores[0].Altura}"
                                 Color="#1E3A8A"
                                 VerticalOptions="End">
                                        <BoxView.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding MostrarValorCommand}" CommandParameter="1"/>
                                        </BoxView.GestureRecognizers>
                                    </BoxView>
                                </StackLayout>

                                <!-- BARRA 2 -->
                                <StackLayout Grid.Column="1" VerticalOptions="End" HorizontalOptions="Center">
                                    <Label Text="{Binding Setores[1].Quantidade}"
                               FontSize="12"
                               FontFamily="InterSemiBold"
                               TextColor="#1E3A8A"
                               IsVisible="{Binding MostrarValor2}"
                               HorizontalOptions="Center"/>
                                    <BoxView WidthRequest="27"
                                 HeightRequest="{Binding Setores[1].Altura}"
                                 Color="#1E3A8A"
                                 VerticalOptions="End">
                                        <BoxView.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding MostrarValorCommand}" CommandParameter="2"/>
                                        </BoxView.GestureRecognizers>
                                    </BoxView>
                                </StackLayout>

                                <!-- BARRA 3 -->
                                <StackLayout Grid.Column="2" VerticalOptions="End" HorizontalOptions="Center">
                                    <Label Text="{Binding Setores[2].Quantidade}"
                               FontSize="12"
                               FontFamily="InterSemiBold"
                               TextColor="#1E3A8A"
                               IsVisible="{Binding MostrarValor3}"
                               HorizontalOptions="Center"/>
                                    <BoxView WidthRequest="27"
                                 HeightRequest="{Binding Setores[2].Altura}"
                                 Color="#1E3A8A"
                                 VerticalOptions="End">
                                        <BoxView.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding MostrarValorCommand}" CommandParameter="3"/>
                                        </BoxView.GestureRecognizers>
                                    </BoxView>
                                </StackLayout>

                                <!-- BARRA 4 -->
                                <StackLayout Grid.Column="3" VerticalOptions="End" HorizontalOptions="Center">
                                    <Label Text="{Binding Setores[3].Quantidade}"
                               FontSize="12"
                               FontFamily="InterSemiBold"
                               TextColor="#1E3A8A"
                               IsVisible="{Binding MostrarValor4}"
                               HorizontalOptions="Center"/>
                                    <BoxView WidthRequest="27"
                                 HeightRequest="{Binding Setores[3].Altura}"
                                 Color="#1E3A8A"
                                 VerticalOptions="End">
                                        <BoxView.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding MostrarValorCommand}" CommandParameter="4"/>
                                        </BoxView.GestureRecognizers>
                                    </BoxView>
                                </StackLayout>

                                <!-- BARRA 5 -->
                                <StackLayout Grid.Column="4" VerticalOptions="End" HorizontalOptions="Center">
                                    <Label Text="{Binding Setores[4].Quantidade}"
                               FontSize="12"
                               FontFamily="InterSemiBold"
                               TextColor="#1E3A8A"
                               IsVisible="{Binding MostrarValor5}"
                               HorizontalOptions="Center"/>
                                    <BoxView WidthRequest="27"
                                 HeightRequest="{Binding Setores[4].Altura}"
                                 Color="#1E3A8A"
                                 VerticalOptions="End">
                                        <BoxView.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding MostrarValorCommand}" CommandParameter="5"/>
                                        </BoxView.GestureRecognizers>
                                    </BoxView>
                                </StackLayout>

                            </Grid>

                            <!-- NOMES DOS SETORES -->
                            <Grid Grid.Column="1" Grid.Row="5"
                      ColumnDefinitions="*,*,*,*,*"
                      Margin="0,6,0,0">

                                <Label Grid.Column="0" Text="{Binding Setores[0].Setor}" FontSize="12" HorizontalOptions="Center" HorizontalTextAlignment="Center" LineBreakMode="WordWrap" MaxLines="2"/>
                                <Label Grid.Column="1" Text="{Binding Setores[1].Setor}" FontSize="12" HorizontalOptions="Center" HorizontalTextAlignment="Center" LineBreakMode="WordWrap" MaxLines="2"/>
                                <Label Grid.Column="2" Text="{Binding Setores[2].Setor}" FontSize="12" HorizontalOptions="Center" HorizontalTextAlignment="Center" LineBreakMode="WordWrap" MaxLines="2"/>
                                <Label Grid.Column="3" Text="{Binding Setores[3].Setor}" FontSize="12" HorizontalOptions="Center" HorizontalTextAlignment="Center" LineBreakMode="WordWrap" MaxLines="2"/>
                                <Label Grid.Column="4" Text="{Binding Setores[4].Setor}" FontSize="12" HorizontalOptions="Center" HorizontalTextAlignment="Center" LineBreakMode="WordWrap" MaxLines="2"/>
                            </Grid>
                        </Grid>

                        <!-- BOTÃO VER TODOS -->
                        <Button Text="Ver todos os setores"
                    TextColor="#1E3A8A"
                    BackgroundColor="Transparent"
                    FontFamily="InterSemiBold"
                    HorizontalOptions="Center"
                    Padding="0"
                    Command="{Binding AbrirPopupCommand}" />

                    </VerticalStackLayout>

                    <!-- POPUP DE LISTA COMPLETA -->
                    <Grid x:Name="PopupTodosSetores"
              IsVisible="{Binding MostrarTodosSetores}"
              BackgroundColor="#80000000"
              VerticalOptions="FillAndExpand"
              HorizontalOptions="FillAndExpand">

                        <Frame BackgroundColor="White"
                   CornerRadius="15"
                   Padding="20"
                   HasShadow="True"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                   WidthRequest="320"
                   HeightRequest="450">

                            <VerticalStackLayout Spacing="10">
                                <Label Text="Todos os Setores"
                           FontFamily="InterSemiBold"
                           FontSize="18"
                           TextColor="Black"
                           HorizontalOptions="Center"/>

                                <CollectionView ItemsSource="{Binding TodosSetores}" HeightRequest="340">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid ColumnDefinitions="*,Auto" Padding="0,6">
                                                <Label Text="{Binding Setor}" FontFamily="InterRegular" FontSize="14"/>
                                                <Label Text="{Binding Quantidade}" Grid.Column="1" FontFamily="InterBold" FontSize="14" HorizontalOptions="End"/>
                                            </Grid>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>

                                <Button Text="Fechar"
                            BackgroundColor="#1E3A8A"
                            TextColor="White"
                            FontFamily="InterSemiBold"
                            CornerRadius="20"
                            HeightRequest="40"
                            Command="{Binding FecharPopupCommand}"/>
                            </VerticalStackLayout>
                        </Frame>
                    </Grid>
                </Grid>
            </Frame>


            <!-- CARD LISTA DE COLABORADORES -->
            <VerticalStackLayout>
                <Frame BackgroundColor="White" CornerRadius="15" HasShadow="True" Padding="15">
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Lista de Colaboradores"
                   FontFamily="InterSemiBold"
                   FontSize="16"
                   TextColor="Black"/>

                        <!-- LISTA (TOP 5) -->
                        <CollectionView ItemsSource="{Binding Colaboradores}" HeightRequest="300">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid ColumnDefinitions="Auto,*,Auto" Padding="0,5">
                                        <ImageButton Source="avatar_placeholder.png"
                                         HeightRequest="40"
                                         WidthRequest="40"
                                         Aspect="AspectFill"
                                         BackgroundColor="Transparent"
                                         IsEnabled="False"
                                         CornerRadius="20"
                                         VerticalOptions="Center"/>
                                        <VerticalStackLayout Grid.Column="1" Margin="10,0">
                                            <Label Text="{Binding Nome}" FontFamily="InterSemiBold" FontSize="14"/>
                                            <Label Text="{Binding SetorCargo}" FontFamily="InterRegular" FontSize="12" TextColor="Gray"/>
                                        </VerticalStackLayout>
                                        <Frame Grid.Column="2" Padding="6,2"
                                   BackgroundColor="#E0F2FE"
                                   CornerRadius="10"
                                   HasShadow="False"
                                   VerticalOptions="Center">
                                            <Label Text="{Binding Status}" FontFamily="InterRegular" FontSize="12" TextColor="#1E3A8A"/>
                                        </Frame>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                        <!-- BOTÃO VER TODOS -->
                        <Button Text="Ver todos os colaboradores"
                            TextColor="#1E3A8A"
                            BackgroundColor="Transparent"
                            FontFamily="InterSemiBold"
                            Command="{Binding AbrirListaCompletaCommand}"
                            HorizontalOptions="Center"/>

                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>


            <!-- BOTÃO ADICIONAR COLABORADOR -->
            <Button 
                Text="Adicionar Colaborador"
                BackgroundColor="#1E3A8A"
                TextColor="White"
                FontFamily="InterSemiBold"
                CornerRadius="30"
                HeightRequest="50"
                ImageSource="plus_placeholder.png"
                ContentLayout="Left,10" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
