<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Heicomp_2025_2.Views.Configuracoes.ConfiguracoesPage"
             Title=""
             BackgroundColor="{AppThemeBinding Light=#F3F4F6, Dark=#0F172A}"
             Shell.FlyoutBehavior="Disabled">

    <!-- Layout do Shell NavBar -->
    <Shell.TitleView>
        <Grid BackgroundColor="{AppThemeBinding Light=#2B4C9E, Dark=#1E293B}"
              ColumnDefinitions="Auto, *, Auto"
              HorizontalOptions="Fill"
              VerticalOptions="Fill"
              Padding="10,0"
              HeightRequest="60">

            <!-- Botão Voltar -->
            <ImageButton Grid.Column="0"
                         Source="seta_direita.png"  
                         HeightRequest="44"
                         WidthRequest="44"
                         BackgroundColor="Transparent"
                         Clicked="BotaoVoltarPainelGestao"
                         HorizontalOptions="Start"
                         VerticalOptions="Center"/>

            <!-- Título -->
            <Label Grid.Column="1"
                   Text="Configurações"
                   FontFamily="OpenSansSemibold"
                   FontSize="20"
                   TextColor="White"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"/>

            <!-- Menu -->
            <ImageButton Grid.Column="2"
                         Source="icone_menu.png"  
                         HeightRequest="44"
                         WidthRequest="44"
                         BackgroundColor="Transparent"
                         HorizontalOptions="End"
                         VerticalOptions="Center"/>
        </Grid>
    </Shell.TitleView>

    <ScrollView>
        <VerticalStackLayout Padding="0" Spacing="0">

            <!-- PERFIL DO USUÁRIO -->
            <VerticalStackLayout Padding="20,30,20,20" Spacing="15">

                <!-- Avatar e Info do Usuário -->
                <Grid ColumnDefinitions="Auto,*" ColumnSpacing="15">
                    <!-- Avatar -->
                    <Border Grid.Column="0"
                            WidthRequest="60"
                            HeightRequest="60"
                            BackgroundColor="{AppThemeBinding Light=#3B82F6, Dark=#2563EB}"
                            StrokeThickness="0"
                            VerticalOptions="Center">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="30"/>
                        </Border.StrokeShape>
                        <Label Text="{Binding InitialsUsuario}"
                               FontFamily="OpenSansSemibold"
                               FontSize="22"
                               TextColor="White"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Border>

                    <!-- Nome e Email -->
                    <VerticalStackLayout Grid.Column="1" 
                                        VerticalOptions="Center"
                                        Spacing="4">
                        <Label Text="{Binding NomeUsuario}"
                               FontFamily="OpenSansSemibold"
                               FontSize="18"
                               TextColor="{AppThemeBinding Light=#111827, Dark=#F9FAFB}"/>
                        <Label Text="{Binding EmailUsuario}"
                               FontFamily="OpenSansRegular"
                               FontSize="14"
                               TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"/>
                    </VerticalStackLayout>
                </Grid>

            </VerticalStackLayout>

            <!-- SEÇÃO: NOTIFICAÇÕES -->
            <VerticalStackLayout Padding="20,10,20,10" Spacing="0">
                <Label Text="NOTIFICAÇÕES"
                       FontFamily="OpenSansSemibold"
                       FontSize="12"
                       TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"
                       Margin="0,0,0,10"/>

                <!-- Notificações em Push -->
                <Border BackgroundColor="{AppThemeBinding Light=White, Dark=#1E293B}"
                        Padding="15"
                        Margin="0,0,0,1"
                        StrokeThickness="0">
                    <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">
                        <!-- Ícone -->
                        <Border Grid.Column="0"
                                WidthRequest="40"
                                HeightRequest="40"
                                BackgroundColor="{AppThemeBinding Light=#DBEAFE, Dark=#1E3A8A}"
                                StrokeThickness="0"
                                VerticalOptions="Center">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8"/>
                            </Border.StrokeShape>
                            <Label Text="🔔"
                                   FontSize="20"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>

                        <!-- Texto -->
                        <VerticalStackLayout Grid.Column="1" 
                                            VerticalOptions="Center"
                                            Spacing="2">
                            <Label Text="Push Notifications"
                                   FontFamily="OpenSansSemibold"
                                   FontSize="16"
                                   TextColor="{AppThemeBinding Light=#111827, Dark=#F9FAFB}"/>
                            <Label Text="Receber notificações no dispositivo"
                                   FontFamily="OpenSansRegular"
                                   FontSize="13"
                                   TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"/>
                        </VerticalStackLayout>

                        <!-- Switch -->
                        <Switch Grid.Column="2"
                                IsToggled="{Binding PushNotificationsEnabled}"
                                OnColor="{AppThemeBinding Light=#3B82F6, Dark=#60A5FA}"
                                ThumbColor="White"
                                VerticalOptions="Center"/>
                    </Grid>
                </Border>

                <!-- Notificações por Email -->
                <Border BackgroundColor="{AppThemeBinding Light=White, Dark=#1E293B}"
                        Padding="15"
                        Margin="0,0,0,1"
                        StrokeThickness="0">
                    <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">
                        <!-- Ícone -->
                        <Border Grid.Column="0"
                                WidthRequest="40"
                                HeightRequest="40"
                                BackgroundColor="{AppThemeBinding Light=#DBEAFE, Dark=#1E3A8A}"
                                StrokeThickness="0"
                                VerticalOptions="Center">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8"/>
                            </Border.StrokeShape>
                            <Label Text="📧"
                                   FontSize="20"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>

                        <!-- Texto -->
                        <VerticalStackLayout Grid.Column="1" 
                                            VerticalOptions="Center"
                                            Spacing="2">
                            <Label Text="Email Notifications"
                                   FontFamily="OpenSansSemibold"
                                   FontSize="16"
                                   TextColor="{AppThemeBinding Light=#111827, Dark=#F9FAFB}"/>
                            <Label Text="Receber emails sobre atualizações"
                                   FontFamily="OpenSansRegular"
                                   FontSize="13"
                                   TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"/>
                        </VerticalStackLayout>

                        <!-- Switch -->
                        <Switch Grid.Column="2"
                                IsToggled="{Binding EmailNotificationsEnabled}"
                                OnColor="{AppThemeBinding Light=#3B82F6, Dark=#60A5FA}"
                                ThumbColor="White"
                                VerticalOptions="Center"/>
                    </Grid>
                </Border>

                <!-- Marketing -->
                <Border BackgroundColor="{AppThemeBinding Light=White, Dark=#1E293B}"
                        Padding="15"
                        StrokeThickness="0">
                    <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">
                        <!-- Ícone -->
                        <Border Grid.Column="0"
                                WidthRequest="40"
                                HeightRequest="40"
                                BackgroundColor="{AppThemeBinding Light=#FEF3C7, Dark=#78350F}"
                                StrokeThickness="0"
                                VerticalOptions="Center">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8"/>
                            </Border.StrokeShape>
                            <Label Text="📢"
                                   FontSize="20"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>

                        <!-- Texto -->
                        <VerticalStackLayout Grid.Column="1" 
                                            VerticalOptions="Center"
                                            Spacing="2">
                            <Label Text="Marketing"
                                   FontFamily="OpenSansSemibold"
                                   FontSize="16"
                                   TextColor="{AppThemeBinding Light=#111827, Dark=#F9FAFB}"/>
                            <Label Text="Ofertas e promoções especiais"
                                   FontFamily="OpenSansRegular"
                                   FontSize="13"
                                   TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"/>
                        </VerticalStackLayout>

                        <!-- Switch -->
                        <Switch Grid.Column="2"
                                IsToggled="{Binding MarketingEnabled}"
                                OnColor="{AppThemeBinding Light=#3B82F6, Dark=#60A5FA}"
                                ThumbColor="White"
                                VerticalOptions="Center"/>
                    </Grid>
                </Border>
            </VerticalStackLayout>

            <!-- SEÇÃO: PREFERÊNCIAS -->
            <VerticalStackLayout Padding="20,20,20,10" Spacing="0">
                <Label Text="PREFERÊNCIAS"
                       FontFamily="OpenSansSemibold"
                       FontSize="12"
                       TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"
                       Margin="0,0,0,10"/>

                <!-- Tema Escuro -->
                <Border BackgroundColor="{AppThemeBinding Light=White, Dark=#1E293B}"
                        Padding="15"
                        Margin="0,0,0,1"
                        StrokeThickness="0">
                    <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">
                        <!-- Ícone -->
                        <Border Grid.Column="0"
                                WidthRequest="40"
                                HeightRequest="40"
                                BackgroundColor="{AppThemeBinding Light=#FEF3C7, Dark=#78350F}"
                                StrokeThickness="0"
                                VerticalOptions="Center">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8"/>
                            </Border.StrokeShape>
                            <Label Text="🌙"
                                   FontSize="20"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>

                        <!-- Texto -->
                        <VerticalStackLayout Grid.Column="1" 
                                            VerticalOptions="Center"
                                            Spacing="2">
                            <Label Text="Tema Escuro"
                                   FontFamily="OpenSansSemibold"
                                   FontSize="16"
                                   TextColor="{AppThemeBinding Light=#111827, Dark=#F9FAFB}"/>
                            <Label Text="Alternar modo escuro"
                                   FontFamily="OpenSansRegular"
                                   FontSize="13"
                                   TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"/>
                        </VerticalStackLayout>

                        <!-- Switch -->
                        <Switch Grid.Column="2"
                                IsToggled="{Binding TemaEscuroEnabled}"
                                OnColor="{AppThemeBinding Light=#3B82F6, Dark=#60A5FA}"
                                ThumbColor="White"
                                VerticalOptions="Center"/>
                    </Grid>
                </Border>

                <!-- Idioma -->
                <Border BackgroundColor="{AppThemeBinding Light=White, Dark=#1E293B}"
                        Padding="15"
                        StrokeThickness="0">
                    <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnIdiomaClicked"/>
                        </Grid.GestureRecognizers>

                        <!-- Ícone -->
                        <Border Grid.Column="0"
                                WidthRequest="40"
                                HeightRequest="40"
                                BackgroundColor="{AppThemeBinding Light=#FED7AA, Dark=#9A3412}"
                                StrokeThickness="0"
                                VerticalOptions="Center">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8"/>
                            </Border.StrokeShape>
                            <Label Text="🌐"
                                   FontSize="20"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>

                        <!-- Texto -->
                        <VerticalStackLayout Grid.Column="1" 
                                            VerticalOptions="Center"
                                            Spacing="2">
                            <Label Text="Idioma"
                                   FontFamily="OpenSansSemibold"
                                   FontSize="16"
                                   TextColor="{AppThemeBinding Light=#111827, Dark=#F9FAFB}"/>
                            <Label Text="Selecione seu idioma"
                                   FontFamily="OpenSansRegular"
                                   FontSize="13"
                                   TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"/>
                        </VerticalStackLayout>

                        <!-- Valor Selecionado -->
                        <HorizontalStackLayout Grid.Column="2" 
                                              VerticalOptions="Center"
                                              Spacing="5">
                            <Label Text="{Binding IdiomaAtual}"
                                   FontFamily="OpenSansRegular"
                                   FontSize="14"
                                   TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"
                                   VerticalOptions="Center"/>
                            <Label Text="›"
                                   FontSize="20"
                                   TextColor="{AppThemeBinding Light=#9CA3AF, Dark=#6B7280}"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Grid>
                </Border>
            </VerticalStackLayout>

            <!-- SEÇÃO: SOBRE -->
            <VerticalStackLayout Padding="20,20,20,10" Spacing="0">
                <Label Text="SOBRE"
                       FontFamily="OpenSansSemibold"
                       FontSize="12"
                       TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"
                       Margin="0,0,0,10"/>

                <!-- Ajuda e Suporte -->
                <Border BackgroundColor="{AppThemeBinding Light=White, Dark=#1E293B}"
                        Padding="15"
                        Margin="0,0,0,1"
                        StrokeThickness="0">
                    <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnAjudaClicked"/>
                        </Grid.GestureRecognizers>

                        <!-- Ícone -->
                        <Border Grid.Column="0"
                                WidthRequest="40"
                                HeightRequest="40"
                                BackgroundColor="{AppThemeBinding Light=#E0E7FF, Dark=#312E81}"
                                StrokeThickness="0"
                                VerticalOptions="Center">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8"/>
                            </Border.StrokeShape>
                            <Label Text="❓"
                                   FontSize="20"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>

                        <!-- Texto -->
                        <VerticalStackLayout Grid.Column="1" 
                                            VerticalOptions="Center"
                                            Spacing="2">
                            <Label Text="Ajuda e Suporte"
                                   FontFamily="OpenSansSemibold"
                                   FontSize="16"
                                   TextColor="{AppThemeBinding Light=#111827, Dark=#F9FAFB}"/>
                            <Label Text="Central de ajuda e FAQ"
                                   FontFamily="OpenSansRegular"
                                   FontSize="13"
                                   TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"/>
                        </VerticalStackLayout>

                        <!-- Seta -->
                        <Label Grid.Column="2"
                               Text="›"
                               FontSize="20"
                               TextColor="{AppThemeBinding Light=#9CA3AF, Dark=#6B7280}"
                               VerticalOptions="Center"/>
                    </Grid>
                </Border>

                <!-- Termos de Uso -->
                <Border BackgroundColor="{AppThemeBinding Light=White, Dark=#1E293B}"
                        Padding="15"
                        StrokeThickness="0">
                    <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnTermosClicked"/>
                        </Grid.GestureRecognizers>

                        <!-- Ícone -->
                        <Border Grid.Column="0"
                                WidthRequest="40"
                                HeightRequest="40"
                                BackgroundColor="{AppThemeBinding Light=#F3E8FF, Dark=#581C87}"
                                StrokeThickness="0"
                                VerticalOptions="Center">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8"/>
                            </Border.StrokeShape>
                            <Label Text="📄"
                                   FontSize="20"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>

                        <!-- Texto -->
                        <VerticalStackLayout Grid.Column="1" 
                                            VerticalOptions="Center"
                                            Spacing="2">
                            <Label Text="Termos de Uso"
                                   FontFamily="OpenSansSemibold"
                                   FontSize="16"
                                   TextColor="{AppThemeBinding Light=#111827, Dark=#F9FAFB}"/>
                            <Label Text="Políticas e termos"
                                   FontFamily="OpenSansRegular"
                                   FontSize="13"
                                   TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"/>
                        </VerticalStackLayout>

                        <!-- Seta -->
                        <Label Grid.Column="2"
                               Text="›"
                               FontSize="20"
                               TextColor="{AppThemeBinding Light=#9CA3AF, Dark=#6B7280}"
                               VerticalOptions="Center"/>
                    </Grid>
                </Border>
            </VerticalStackLayout>

            <!-- BOTÃO SALVAR -->
            <Border Padding="20,30,20,20">
                <Button Text="Salvar Alterações"
                        BackgroundColor="{AppThemeBinding Light=#1E3A8A, Dark=#3B82F6}"
                        TextColor="White"
                        FontFamily="OpenSansSemibold"
                        FontSize="16"
                        HeightRequest="50"
                        CornerRadius="10"
                        Clicked="OnSalvarClicked"/>
            </Border>

            <!-- Versão -->
            <Label Text="Versão 0.0.0 (Pre-Alpha)"
                   FontFamily="OpenSansRegular"
                   FontSize="12"
                   TextColor="{AppThemeBinding Light=#9CA3AF, Dark=#6B7280}"
                   HorizontalOptions="Center"
                   Margin="0,0,0,30"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>