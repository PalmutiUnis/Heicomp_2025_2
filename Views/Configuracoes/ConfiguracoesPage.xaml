<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Heicomp_2025_2.Views.Configuracoes.ConfiguracoesPage"
             Title=""
             BackgroundColor="{AppThemeBinding Light=#F3F4F6, Dark=#0F172A}"
             Shell.FlyoutBehavior="Disabled">

    <!-- Layout do Shell NavBar -->
    <Shell.TitleView>
        <Grid BackgroundColor="{AppThemeBinding Light=#2B4C9E, Dark=#1E293B}"
              ColumnDefinitions="Auto, *"
              HorizontalOptions="Fill"
              VerticalOptions="Fill"
              Margin="0"
              Padding="0,0"
              HeightRequest="60">

            <!-- Botão Voltar -->
            <ImageButton Grid.Column="0"
                         Source="seta_direita.png"  
                         HeightRequest="44"
                         WidthRequest="44"
                         BackgroundColor="Transparent"
                         Clicked="BotaoVoltarPainelGestao"
                         Margin="0"
                         Padding="0"
                         HorizontalOptions="Start"
                         VerticalOptions="Center"/>

            <!-- Título -->
            <Label Grid.Column="1"
                   Text="Configurações"
                   Style="{StaticResource TituloShellStyle}"
                   VerticalOptions="Center"
                   HorizontalOptions="Fill"/>

            <!-- Menu -->
            <ImageButton Grid.Column="2"
                     Source="icone_menu.png"  
                     HeightRequest="44"
                     WidthRequest="44"
                     BackgroundColor="Transparent"
                     Margin="0"
                     Padding="0"
                     HorizontalOptions="End"
                     VerticalOptions="Center"/>
        </Grid>
    </Shell.TitleView>

    <ScrollView>
        <VerticalStackLayout Padding="0" Spacing="0">

            <!-- PERFIL DO USUÁRIO -->
            <VerticalStackLayout Padding="20,30,20,20" Spacing="15">

                <!-- Avatar e Info do Usuário -->
                <Grid ColumnDefinitions="Auto,*" ColumnSpacing="15">
                    <!-- Avatar -->
                    <Border Grid.Column="0"
                            WidthRequest="60"
                            HeightRequest="60"
                            BackgroundColor="{AppThemeBinding Light=#3B82F6, Dark=#2563EB}"
                            StrokeThickness="0"
                            VerticalOptions="Center">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="30"/>
                        </Border.StrokeShape>
                        <Label Style="{StaticResource TituloShellStyle}"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Border>

                    <!-- Nome e Email -->
                    <VerticalStackLayout Grid.Column="1" 
                                        VerticalOptions="Center"
                                        Spacing="4">
                        <Label Text="{Binding NomeUsuario}"
                               Style="{StaticResource TituloShellStyle}"/>
                        <Label Text="{Binding EmailUsuario}"
                               Style="{StaticResource TituloShellStyle}"/>
                    </VerticalStackLayout>
                </Grid>

            </VerticalStackLayout>

            <!-- SEÇÃO: NOTIFICAÇÕES -->
            <VerticalStackLayout Padding="20,10,20,10" Spacing="0">
                <Label Text="NOTIFICAÇÕES"
                       Style="{StaticResource TituloShellStyle}"
                       Margin="0,0,0,10"/>

                <!-- Notificações em Push -->
                <Border BackgroundColor="{AppThemeBinding Light=White, Dark=#1E293B}"
                        Padding="15"
                        Margin="0,0,0,1"
                        StrokeThickness="0">
                    <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">
                        <!-- Ícone -->
                        <Border Grid.Column="0"
                                WidthRequest="40"
                                HeightRequest="40"
                                BackgroundColor="{AppThemeBinding Light=#DBEAFE, Dark=#1E3A8A}"
                                StrokeThickness="0"
                                VerticalOptions="Center">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8"/>
                            </Border.StrokeShape>
                            <Image Source="icone_sino_verde.png"
                                   WidthRequest="40"
                                   HeightRequest="40"
                                   Aspect="AspectFit"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>

                        <!-- Texto -->
                        <VerticalStackLayout Grid.Column="1" 
                                            VerticalOptions="Center"
                                            Spacing="2">
                            <Label Text="Push Notifications"
                                   Style="{StaticResource TituloShellStyle}"/>
                            <Label Text="Receber notificações no dispositivo"
                                   Style="{StaticResource TituloShellStyle}"/>
                        </VerticalStackLayout>

                        <!-- Switch -->
                        <Switch Grid.Column="2"
                                IsToggled="{Binding PushNotificationsEnabled}"
                                OnColor="{AppThemeBinding Light=#3B82F6, Dark=#60A5FA}"
                                ThumbColor="White"
                                VerticalOptions="Center"/>
                    </Grid>
                </Border>

                <!-- Notificações por Email -->
                <Border BackgroundColor="{AppThemeBinding Light=White, Dark=#1E293B}"
                        Padding="15"
                        Margin="0,0,0,1"
                        StrokeThickness="0">
                    <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">
                        <!-- Ícone -->
                        <Border Grid.Column="0"
                                WidthRequest="40"
                                HeightRequest="40"
                                BackgroundColor="{AppThemeBinding Light=#DBEAFE, Dark=#1E3A8A}"
                                StrokeThickness="0"
                                VerticalOptions="Center">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8"/>
                            </Border.StrokeShape>
                            <Image Source="icone_mensagem.png"
                                   WidthRequest="40"
                                   HeightRequest="40"
                                   Aspect="AspectFit"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>

                        <!-- Texto -->
                        <VerticalStackLayout Grid.Column="1" 
                                            VerticalOptions="Center"
                                            Spacing="2">
                            <Label Style="{StaticResource TituloShellStyle}"/>
                            <Label Text="Receber emails sobre atualizações"
                                  Style="{StaticResource TituloShellStyle}"/>
                        </VerticalStackLayout>

                        <!-- Switch -->
                        <Switch Grid.Column="2"
                                IsToggled="{Binding EmailNotificationsEnabled}"
                                OnColor="{AppThemeBinding Light=#3B82F6, Dark=#60A5FA}"
                                ThumbColor="White"
                                VerticalOptions="Center"/>
                    </Grid>
                </Border>

                <!-- Marketing -->
                <Border BackgroundColor="{AppThemeBinding Light=White, Dark=#1E293B}"
                        Padding="15"
                        StrokeThickness="0">
                    <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">
                        <!-- Ícone -->
                        <Border Grid.Column="0"
                                WidthRequest="40"
                                HeightRequest="40"
                                BackgroundColor="{AppThemeBinding Light=#FEF3C7, Dark=#78350F}"
                                StrokeThickness="0"
                                VerticalOptions="Center">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8"/>
                            </Border.StrokeShape>
                            <Image Source="icone_avisos.png"
                                   WidthRequest="40"
                                   HeightRequest="40"
                                   Aspect="AspectFit"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>

                        <!-- Texto -->
                        <VerticalStackLayout Grid.Column="1" 
                                            VerticalOptions="Center"
                                            Spacing="2">
                            <Label Text="Marketing"
                                  Style="{StaticResource TituloShellStyle}"/>
                            <Label Text="Ofertas e promoções especiais"
                                   Style="{StaticResource TituloShellStyle}"/>
                        </VerticalStackLayout>

                        <!-- Switch -->
                        <Switch Grid.Column="2"
                                IsToggled="{Binding MarketingEnabled}"
                                OnColor="{AppThemeBinding Light=#3B82F6, Dark=#60A5FA}"
                                ThumbColor="White"
                                VerticalOptions="Center"/>
                    </Grid>
                </Border>
            </VerticalStackLayout>

            <!-- SEÇÃO: PREFERÊNCIAS -->
            <VerticalStackLayout Padding="20,20,20,10" Spacing="0">
                <Label Text="PREFERÊNCIAS"
Style="{StaticResource TituloShellStyle}"
                       Margin="0,0,0,10"/>

                <!-- Tema Escuro -->
                <Border BackgroundColor="{AppThemeBinding Light=White, Dark=#1E293B}"
                        Padding="15"
                        Margin="0,0,0,1"
                        StrokeThickness="0">
                    <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">
                        <!-- Ícone -->
                        <Border Grid.Column="0"
                                WidthRequest="40"
                                HeightRequest="40"
                                BackgroundColor="{AppThemeBinding Light=#FEF3C7, Dark=#78350F}"
                                StrokeThickness="0"
                                VerticalOptions="Center">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8"/>
                            </Border.StrokeShape>
                            <Image Source="icone_modo_escuro.png.png"
                                  WidthRequest="40"
                                  HeightRequest="40"
                                  Aspect="AspectFit"
                                  HorizontalOptions="Center"
                                  VerticalOptions="Center"/>
                        </Border>

                        <!-- Texto -->
                        <VerticalStackLayout Grid.Column="1" 
                                            VerticalOptions="Center"
                                            Spacing="2">
                            <Label Text="Tema Escuro"
Style="{StaticResource TituloShellStyle}"/>
                            <Label Text="Alternar modo escuro"
Style="{StaticResource TituloShellStyle}"/>
                        </VerticalStackLayout>

                        <!-- Switch -->
                        <Switch Grid.Column="2"
                                IsToggled="{Binding TemaEscuroEnabled}"
                                OnColor="{AppThemeBinding Light=#3B82F6, Dark=#60A5FA}"
                                ThumbColor="White"
                                VerticalOptions="Center"/>
                    </Grid>
                </Border>

                <!-- Idioma -->
                <Border BackgroundColor="{AppThemeBinding Light=White, Dark=#1E293B}"
                        Padding="15"
                        StrokeThickness="0">
                    <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnIdiomaClicked"/>
                        </Grid.GestureRecognizers>

                        <!-- Ícone -->
                        <Border Grid.Column="0"
                                WidthRequest="40"
                                HeightRequest="40"
                                BackgroundColor="{AppThemeBinding Light=#FED7AA, Dark=#9A3412}"
                                StrokeThickness="0"
                                VerticalOptions="Center">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8"/>
                            </Border.StrokeShape>
                            <Image Source="icone_mundial.png"
                                   WidthRequest="40"
                                   HeightRequest="40"
                                   Aspect="AspectFit"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                />
                        </Border>

                        <!-- Texto -->
                        <VerticalStackLayout Grid.Column="1" 
                                            VerticalOptions="Center"
                                            Spacing="2">
                            <Label Text="Idioma"
Style="{StaticResource TituloShellStyle}"/>
                            <Label Text="Selecione seu idioma"
Style="{StaticResource TituloShellStyle}"/>
                        </VerticalStackLayout>

                        <!-- Valor Selecionado -->
                        <HorizontalStackLayout Grid.Column="2" 
                                              VerticalOptions="Center"
                                              Spacing="5">
                            <Label Text="{Binding IdiomaAtual}"
                                   FontFamily="OpenSansRegular"
                                   FontSize="14"
                                   TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"
                                   VerticalOptions="Center"/>
                            <Label Text="›"
Style="{StaticResource TituloShellStyle}"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Grid>
                </Border>
            </VerticalStackLayout>

            <!-- SEÇÃO: SOBRE -->
            <VerticalStackLayout Padding="20,20,20,10" Spacing="0">
                <Label Text="SOBRE"
                       Style="{StaticResource TituloShellStyle}"
                       Margin="0,0,0,10"/>

                <!-- Ajuda e Suporte -->
                <Border BackgroundColor="{AppThemeBinding Light=White, Dark=#1E293B}"
                        Padding="15"
                        Margin="0,0,0,1"
                        StrokeThickness="0">
                    <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnAjudaClicked"/>
                        </Grid.GestureRecognizers>

                        <!-- Ícone -->
                        <Border Grid.Column="0"
                                WidthRequest="40"
                                HeightRequest="40"
                                BackgroundColor="{AppThemeBinding Light=#E0E7FF, Dark=#312E81}"
                                StrokeThickness="0"
                                VerticalOptions="Center">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8"/>
                            </Border.StrokeShape>
                            <Image Source="icone_duvidas.png"
                                   WidthRequest="40"
                                   HeightRequest="40"
                                   Aspect="AspectFit"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>

                        <!-- Texto -->
                        <VerticalStackLayout Grid.Column="1" 
                                            VerticalOptions="Center"
                                            Spacing="2">
                            <Label Text="Ajuda e Suporte"
                                   Style="{StaticResource TituloShellStyle}"/>
                            <Label Text="Central de ajuda e FAQ"
                                   FontFamily="OpenSansRegular"
                                   FontSize="13"
                                   TextColor="{AppThemeBinding Light=#6B7280, Dark=#9CA3AF}"/>
                        </VerticalStackLayout>

                        <!-- Seta -->
                        <Label Grid.Column="2"
                               Text="›"
                               FontSize="20"
                               TextColor="{AppThemeBinding Light=#9CA3AF, Dark=#6B7280}"
                               VerticalOptions="Center"/>
                    </Grid>
                </Border>

                <!-- Termos de Uso -->
                <Border BackgroundColor="{AppThemeBinding Light=White, Dark=#1E293B}"
                        Padding="15"
                        StrokeThickness="0">
                    <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnTermosClicked"/>
                        </Grid.GestureRecognizers>

                        <!-- Ícone -->
                        <Border Grid.Column="0"
                                WidthRequest="40"
                                HeightRequest="40"
                                BackgroundColor="{AppThemeBinding Light=#F3E8FF, Dark=#581C87}"
                                StrokeThickness="0"
                                VerticalOptions="Center"
                                HorizontalOptions="Center">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8"/>
                            </Border.StrokeShape>
                            <Image Source="icone_documentos.png"
                                   WidthRequest="40"
                                   HeightRequest="40"
                                   Aspect="AspectFit"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>

                        <!-- Texto -->
                        <VerticalStackLayout Grid.Column="1" 
            VerticalOptions="Center" 
                                            Spacing="2">
                            <Label Text="Termos de Uso"
                                   Style="{StaticResource TituloShellStyle}"/>
                            <Label Text="Políticas e termos"
                                   Style="{StaticResource TituloShellStyle}"/>
                        </VerticalStackLayout>

                        <!-- Seta -->
                        <Label Grid.Column="2"
                               Text="›"
                               FontSize="20"
                               TextColor="{AppThemeBinding Light=#9CA3AF, Dark=#6B7280}"
                               VerticalOptions="Center"/>
                    </Grid>
                </Border>
            </VerticalStackLayout>

            <!-- BOTÃO SALVAR -->
            <Border Padding="20,30,20,20">
                <Button Text="Salvar Alterações"
                        BackgroundColor="{AppThemeBinding Light=#1E3A8A, Dark=#3B82F6}"
                        TextColor="White"
                        Style="{StaticResource TituloShellStyle}"
                        HeightRequest="50"
                        CornerRadius="10"
                        Clicked="OnSalvarClicked"/>
            </Border>

            <!-- Versão -->
            <Label Text="Versão 0.0.0 (Pre-Alpha)"
                   FontFamily="OpenSansRegular"
                   FontSize="12"
                   TextColor="{AppThemeBinding Light=#9CA3AF, Dark=#6B7280}"
                   HorizontalOptions="Center"
                   Margin="0,0,0,30"/>

    </VerticalStackLayout>
    </ScrollView>
</ContentPage>