<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Heicomp_2025_2.Views.Cards.CardGrande">
    

        <!-- Borda padrão do card definida no Styles.xaml -->
    <Border Style="{StaticResource CardPadrao}"
                HorizontalOptions="Fill"
                VerticalOptions="Start"
                Padding="15">

        <!-- Grid usado para organizar ícone, indicador, título e número -->
        <Grid RowDefinitions="Auto,Auto,Auto" Padding="10">

            <!-- Linha 0: Ícone à esquerda e Indicador à direita -->
            <Grid Grid.Row="0">
                <!-- Ícone do card -->
                <Image Source="{Binding Icone}" WidthRequest="30" HeightRequest="30"
                       HorizontalOptions="Start" VerticalOptions="Center"/>

                <!-- Indicador do card (ex: +5,2%) -->
                <Label Text="{Binding Indicador}" FontFamily="InterMedium" FontSize="14"
                       TextColor="{StaticResource CorIndicador}" 
                       HorizontalOptions="End" VerticalOptions="Center"/>
            </Grid>

            <!-- Linha 1: Título -->
            <Label Grid.Row="1" Text="{Binding Titulo}" Style="{StaticResource TextoSubtitulo}"
                   Margin="0,5,0,0"/>

            <!-- Linha 2: Número em destaque -->
            <Label Grid.Row="2" Text="{Binding Numero}" FontFamily="InterBold" FontSize="28"
                   TextColor="{StaticResource CorTextoPreto}" Margin="0,2,0,0"/>
        </Grid>
    </Border>

</ContentView>
