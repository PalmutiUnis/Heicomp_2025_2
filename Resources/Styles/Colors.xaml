<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Note: For Android please see also Platforms\Android\Resources\values\colors.xml -->

    <Color x:Key="Primary">#512BD4</Color>
    <Color x:Key="PrimaryDark">#ac99ea</Color>
    <Color x:Key="PrimaryDarkText">#242424</Color>
    <Color x:Key="Secondary">#DFD8F7</Color>
    <Color x:Key="SecondaryDarkText">#9880e5</Color>
    <Color x:Key="Tertiary">#2B0B98</Color>
    <Color x:Key="CinzaClaro">#E5E7EB</Color>

    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>
    <Color x:Key="Magenta">#D600AA</Color>
    <Color x:Key="MidnightBlue">#190649</Color>
    <Color x:Key="OffBlack">#1f1f1f</Color>
    <Color x:Key="AzulTemaClaro">#1E3A8A</Color>
    <Color x:Key="AzulTemaEscuro">#3B82F6</Color>

    <Color x:Key="Gray100">#E1E1E1</Color>
    <Color x:Key="Gray200">#C8C8C8</Color>
    <Color x:Key="Gray300">#ACACAC</Color>
    <Color x:Key="Gray400">#919191</Color>
    <Color x:Key="Gray500">#6E6E6E</Color>
    <Color x:Key="Gray600">#404040</Color>
    <Color x:Key="Gray900">#212121</Color>
    <Color x:Key="Gray950">#141414</Color>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>

    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}"/>
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}"/>
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}"/>
    <SolidColorBrush x:Key="Gray400Brush" Color="{StaticResource Gray400}"/>
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}"/>
    <SolidColorBrush x:Key="Gray600Brush" Color="{StaticResource Gray600}"/>
    <SolidColorBrush x:Key="Gray900Brush" Color="{StaticResource Gray900}"/>
    <SolidColorBrush x:Key="Gray950Brush" Color="{StaticResource Gray950}"/>

    <!-- =========================================================
         GUIA DE CORES — HEICOMP BASE
         Este arquivo define todas as cores e brushes do projeto.
         ========================================================= -->

    <!-- 
        Observação:
        Cada cor tem duas versões:
        1. Color — Usada em propriedades que esperam um valor de cor simples (ex: BackgroundColor)
        2. SolidColorBrush — Usada em propriedades que esperam um Brush (ex: Background)
    -->

    <!-- =========================================================
         LAYOUT PRINCIPAL
         ========================================================= -->

    <!-- Fundo do menu lateral, cabeçalho superior e botões -->
    <Color x:Key="CorFundoLayout">#1E3A8A</Color>
    <SolidColorBrush x:Key="BrushCorFundoLayout" Color="{StaticResource CorFundoLayout}" />

    <!-- Texto principal sobre fundo escuro -->
    <Color x:Key="CorTextoBranco">#FFFFFF</Color>
    <SolidColorBrush x:Key="BrushCorTextoBranco" Color="{StaticResource CorTextoBranco}" />

    <!-- Texto padrão sobre fundo claro (preto levemente acinzentado) -->
    <Color x:Key="CorTextoPreto">#111827</Color>
    <SolidColorBrush x:Key="BrushCorTextoPreto" Color="{StaticResource CorTextoPreto}" />

    <!-- Texto secundário / detalhes em cinza -->
    <Color x:Key="CorTextoCinza">#6B7280</Color>
    <SolidColorBrush x:Key="BrushCorTextoCinza" Color="{StaticResource CorTextoCinza}" />
    
    <!-- Texto secundário para modo escuro -->
    <Color x:Key="CorTextoCinzaEscuro">#919191</Color>
    <SolidColorBrush x:Key="BrushCorTextoCinzaEscuro" Color="{StaticResource CorTextoCinzaEscuro}"/>

    <!-- =========================================================
         CARDS
         ========================================================= -->

    <!-- Texto de card neutro / informativo -->
    <Color x:Key="CorCardNeutra">#6B7280</Color>
    <SolidColorBrush x:Key="BrushCorCardNeutra" Color="{StaticResource CorCardNeutra}" />

    <!-- Texto de card rosa de destaque -->
    <Color x:Key="CorCardRosa">#EC4899</Color>
    <SolidColorBrush x:Key="BrushCorCardRosa" Color="{StaticResource CorCardRosa}" />

    <!-- Indicador positivo (ex: +5%) -->
    <Color x:Key="CorCardSucesso">#4ADE80</Color>
    <SolidColorBrush x:Key="BrushCorCardSucesso" Color="{StaticResource CorCardSucesso}" />

    <Color x:Key="CorCardFundo">#ffffff</Color>
    <SolidColorBrush x:Key="BrushCorCardFundo" Color="{StaticResource CorCardFundo}" />

    <Color x:Key="CorSombraCard">#ffffff</Color>
    <SolidColorBrush x:Key="BrushCorSombraCard" Color="{StaticResource CorSombraCard}" />

    <Color x:Key="CorSombraCardEscuro">#131417</Color>
    <SolidColorBrush x:Key="BrushCorSombraCardEscuro" Color="{StaticResource CorSombraCardEscuro}" />

    <!-- Fundo gradiente usado em cards e gráficos -->
    <LinearGradientBrush x:Key="CorCardGradiente" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#1E3A8A" Offset="0.0" />
        <GradientStop Color="#031653" Offset="1.0" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="BrushCorCardGradiente" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#1E3A8A" Offset="0.0" />
        <GradientStop Color="#031653" Offset="1.0" />
    </LinearGradientBrush>

    <!-- Borda opcional para padronização de cards -->
    <Color x:Key="CorCardBorda">#babdc2</Color>
    <Color x:Key="CorCardBordaEscuro">#1c1e21</Color>
    <SolidColorBrush x:Key="BrushCorCardBorda" Color="{StaticResource CorCardBorda}" />

    <!-- =========================================================
         GRÁFICOS
         ========================================================= -->

    <!-- Cor principal dos gráficos (colunas e barras) 
             Também é utilizada em TEXTOS DE CARDS-->
    <Color x:Key="CorGraficoPrimaria">#1E3A8A</Color>
    <SolidColorBrush x:Key="BrushCorGraficoPrimaria" Color="{StaticResource CorGraficoPrimaria}" />

    <!-- Azul claro usado em gráficos de barras
          Também é utilizada em TEXTOS DE CARDS -->
    <Color x:Key="CorGraficoAzulClaro3">#3B82F6</Color>
    <SolidColorBrush x:Key="BrushCorGraficoAzulClaro3" Color="{StaticResource CorGraficoAzulClaro3}" />


    <!-- Azul claro usado em gráficos de barras -->
    <Color x:Key="CorGraficoAzulClaro1">#60A5FA</Color>
    <SolidColorBrush x:Key="BrushCorGraficoAzulClaro1" Color="{StaticResource CorGraficoAzulClaro1}" />

    <!-- Azul claro usado em gráficos de rosca -->
    <Color x:Key="CorGraficoAzulClaro2">#93C5FD</Color>
    <SolidColorBrush x:Key="BrushCorGraficoAzulClaro2" Color="{StaticResource CorGraficoAzulClaro2}" />

    <!-- Rosa usado em gráficos de rosca / destaque feminino -->
    <Color x:Key="CorGraficoRosa">#EC4899</Color>
    <SolidColorBrush x:Key="BrushCorGraficoRosa" Color="{StaticResource CorGraficoRosa}" />

    <!-- Verde usado em gráficos de rosca (valores positivos) -->
    <Color x:Key="CorGraficoVerde">#10B981</Color>
    <SolidColorBrush x:Key="BrushCorGraficoVerde" Color="{StaticResource CorGraficoVerde}" />

    <!-- Verde claro usado como indicador de crescimento -->
    <Color x:Key="CorGraficoVerdeClaro">#4ADE80</Color>
    <SolidColorBrush x:Key="BrushCorGraficoVerdeClaro" Color="{StaticResource CorGraficoVerdeClaro}" />

    <!-- Laranja usado em gráficos de rosca (alerta leve) -->
    <Color x:Key="CorGraficoLaranja">#F59E0B</Color>
    <SolidColorBrush x:Key="BrushCorGraficoLaranja" Color="{StaticResource CorGraficoLaranja}" />

    <!-- Laranja escuro usado para alertas leves -->
    <Color x:Key="CorGraficoLaranjaEscuro">#EA580C</Color>
    <SolidColorBrush x:Key="BrushCorGraficoLaranjaEscuro" Color="{StaticResource CorGraficoLaranjaEscuro}" />

    <!-- Vermelho usado para indicar erro ou queda -->
    <Color x:Key="CorGraficoVermelho">#EF4444</Color>
    <SolidColorBrush x:Key="BrushCorGraficoVermelho" Color="{StaticResource CorGraficoVermelho}" />


    <!-- Cinza usado como cor neutra de fundo ou detalhes de gráficos -->
    <Color x:Key="CorGraficoRoxo">#7C3AED</Color>
    <SolidColorBrush x:Key="BrushCorGraficoRoxo" Color="{StaticResource CorGraficoRoxo}" />
    <!-- Verde usado em gráficos de roscas -->
    <Color x:Key="CorGraficoVerde2">#059669</Color>
    <SolidColorBrush x:Key="BrushCorGraficVerde2" Color="{StaticResource CorGraficoVerde2}" />


    <!-- Roxo usado em gráficos de roscas -->
    <Color x:Key="CorGraficoCinza">#6B7280</Color>
    <SolidColorBrush x:Key="BrushCorGraficoCinza" Color="{StaticResource CorGraficoCinza}" />

    <!-- CORES PARA TEMA ESCURO/CLARO -->

    <!-- Fundos de Página -->
    <Color x:Key="FundoPaginaClaro">White</Color>
    <Color x:Key="FundoPaginaEscuro">#0F172A</Color>

    <!-- Fundos de Cards -->
    <Color x:Key="FundoCardClaro">#e2e3e5</Color>
    <Color x:Key="FundoCardEscuro">#1E293B</Color>

    <!-- Headers -->
    <Color x:Key="HeaderClaro">#2B4C9E</Color>
    <Color x:Key="HeaderEscuro">#000000</Color>

    <!-- Textos Principais -->
    <Color x:Key="TextoPrincipalClaro">#111827</Color>
    <Color x:Key="TextoPrincipalEscuro">#F9FAFB</Color>

    <!-- Textos Secundários -->
    <Color x:Key="TextoSecundarioClaro">#6B7280</Color>
    <Color x:Key="TextoSecundarioEscuro">#9CA3AF</Color>

    <!-- Switches -->
    <Color x:Key="SwitchClaro">#3B82F6</Color>
    <Color x:Key="SwitchEscuro">#60A5FA</Color>

    <!-- Botões -->
    <Color x:Key="BotaoClaro">#1E3A8A</Color>
    <Color x:Key="BotaoEscuro">#3B82F6</Color>

    <!-- Barras de carregamento/Progresso -->
    <Color x:Key="ProgressHomem">#3B82F6</Color>
    <Color x:Key="ProgressMulher">#EC4899</Color>
    <Color x:Key="ProgressNinf">#9CA3AF</Color>
    
    <!-- Textos Coloridos -->
    <Color x:Key="TextoAzulClaro">#1E3A8A</Color>
    <Color x:Key="TextoAzulEscuro">#5780f7</Color>
    <Color x:Key="TextoColaboradores">#2c468f</Color>
    <Color x:Key="TextoGruposAdm">#9946bd</Color>
    
    <!-- Labels Coloridas -->
    <Color x:Key="LabelAzulClaro">#251E3A8A</Color>
    <Color x:Key="LabelAzulEscuro">#253B82F6</Color>
    <Color x:Key="LabelGruposAdm">#259946bd</Color>
    
    <!-- Fundos coloridos -->
    <Color x:Key="FundoImagemClaro">#27344a</Color>
    <Color x:Key="FundoImagemEscuro">#27344a</Color>
    
    <!-- Transparente -->
    <Color x:Key="Transparente">Transparent</Color>
    
    <!-- Cor Shell -->
    <Color x:Key="CorShellClaro">#1e3a8a</Color>
    <Color x:Key="CorShellEscuro">#000000</Color>
    
    <!-- Cor Hamburguer -->
    <Color x:Key="CorHamburguer">#4169E1</Color>
    
    <!-- Cor Picker -->
    <Color x:Key="FundoPickerClaro">#E5E7EB</Color>
    <Color x:Key="FundoPickerEscuro">#334155</Color>
    
    <!-- Borda para botões -->
    <Color x:Key="BordaBotaoClaro">#0F1D45</Color>
    <Color x:Key="BordaBotaoEscuro">#1D4ED8</Color>
</ResourceDictionary>